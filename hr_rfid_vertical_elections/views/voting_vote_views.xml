<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="voting_vote_view_search" model="ir.ui.view">
        <field name="name">Votes search view</field>
        <field name="model">voting.vote</field>
        <field name="arch" type="xml">
            <search string="Votes">
                <field name="voter_id"/>
                <field name="voting_item_id"/>
                <filter name="votes_today" string="Today Votes"
                        domain="[('vote_time', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="group_by_voting_item_id" context="{'group_by': 'voting_item_id'}"/>
                <filter name="group_by_vote" context="{'group_by': 'vote'}"/>
            </search>
        </field>
    </record>

    <record id="voting_vote_view_list" model="ir.ui.view">
        <field name="name">voting.vote.view.list</field>
        <field name="model">voting.vote</field>
        <field name="arch" type="xml">
            <tree>
                <field name="voting_item_id"/>
                <field name="voter_id"/>
                <field name="vote"/>
                <field name="vote_time"/>
            </tree>
        </field>
    </record>

    <record id="voting_vote_view_form" model="ir.ui.view">
        <field name="name">voting_vote.view.form</field>
        <field name="model">voting.vote</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title mb-3">
                        <label for="voting_item_id"/>
                        <h1>
                            <field name="voting_item_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="voter_id"/>
                        </group>
                        <group>
                            <field name="vote"/>
                        </group>
                        <group>
                            <field name="vote_time"/>
                        </group>
                        <group>
                            <field name="voting_session_id"/>
                            <field name="vote_event_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="voting_vote_action" model="ir.actions.act_window">
        <field name="name">Votes</field>
        <field name="res_model">voting.vote</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"search_default_group_by_vote": 1, "search_default_group_by_voting_item_id": 1}</field>
    </record>
</odoo>
