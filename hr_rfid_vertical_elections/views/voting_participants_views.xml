<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="voting_participants_view_list" model="ir.ui.view">
        <field name="name">voting.participants.view.list</field>
        <field name="model">voting.participants</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Name"/>
            </list>
        </field>
    </record>

    <record id="voting_participants_view_form" model="ir.ui.view">
        <field name="name">voting_participants.view.form</field>
        <field name="model">voting.participants</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title mb-3">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="E.g. Elected group of people"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="participant_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="terminal_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                 <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="voting_participants_action" model="ir.actions.act_window">
        <field name="name">Voting groups</field>
        <field name="res_model">voting.participants</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
