<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="voting_item_view_list" model="ir.ui.view">
        <field name="name">voting.item.view.list</field>
        <field name="model">voting.item</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Name"/>
            </list>
        </field>
    </record>

    <record id="voting_item_view_form" model="ir.ui.view">
        <field name="name">voting_item.view.form</field>
        <field name="model">voting.item</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title mb-3">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="E.g. Decision of gardens"/>
                        </h1>
                    </div>
                    <group>
                        <field name="short_description"/>
                    </group>
                    <group>
                        <field name="document"/>
                    </group>
                    <group>
                        <field name="voting_session_id" widget="many2many_tags"/>
                        <field name="vote_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                 <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="voting_item_action" model="ir.actions.act_window">
        <field name="name">Voting Item</field>
        <field name="res_model">voting.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
