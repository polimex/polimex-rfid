<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hr_rfid_vertical_elections.voting_display_layout" name="Voting Display Layoput">
        <t t-call="web.layout">
            <t t-set="html_data" t-value="{'lang': display_info['lang']}"/>
            <t t-set="head">
                <title t-esc="'%s - %s by Polimex' % (display_info['name'], display_info['company_name'])"/>
                <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
                <meta http-equiv="content-type" content="text/html, charset=utf-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="mobile-web-app-capable" content="yes"/>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
<!--                <t t-call-assets="web.assets_frontend_minimal" t-css="false"/>-->
<!--                <t t-call-assets="web.assets_frontend_lazy" t-css="false" />-->
                <t t-call-assets="hr_rfid_vertical_elections.assets_display" t-js="false"/>
                <t t-call-assets="hr_rfid_vertical_elections.assets_display" t-css="false" />
                <t t-call="web.conditional_assets_tests">
                    <t t-set="ignore_missing_deps" t-value="True"/>
                </t>

                <script t-nocache="Dev Purposes" type="text/javascript">
                    odoo.define("hr_rfid_vertical_elections.display_main_view", ["@hr_rfid_vertical_elections/display/display_view/display_view"], function (require) {
                        var { createPublicDisplay } = require("@hr_rfid_vertical_elections/display/display_view/display_view");
                        createPublicDisplay(document, <t t-out="json.dumps(display_info)"/>);
                        });
                </script>
            </t>
            <t t-set="body">
            </t>
            <body class="o_web_client o_display_frontend">
            </body>
        </t>
    </template>
</odoo>
