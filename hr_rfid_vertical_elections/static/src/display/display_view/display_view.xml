<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="hr_rfid_vertical_elections.DisplayView">
        <div class="row d-flex g-0 h-lg-100 bg-white">
            <div class="o_display_main col-lg-8 col-xl-9 position-relative d-flex flex-column h-lg-100 overflow-lg-auto">
                <div class="d-flex flex-column flex-grow-1 justify-content-between gap-5 p-3 text-white fs-2"
                     t-attf-style="background-image: linear-gradient(#{bgColor}, #{bgColor}), url('#{manageDisplayUrl}/background')">
                    <span class="position-absolute top-0 start-0 w-100 h-100 bg-gradient"/>
                    <div class="o_room_top position-relative text-end">
                        <DisplayTime/>
                    </div>
                    <div class="position-relative d-flex flex-fill flex-column align-items-center justify-content-around gap-3 w-100">
                        <t t-if="!state.currentSession">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fa fa-check-circle fa-3x"/>
                                <h1 class="mb-0 text-uppercase fw-bold display-3 text-white smooth-color-animate">
                                    Дискусии
                                </h1>
                                <h3 class="mb-0 text-center fw-bold display-3 text-white">Няма открито гласуване в момента
                                </h3>
                            </div>
                        </t>
                        <t t-else="">
                            <t t-if="!state.currentSessionVoteEnded">
                                <div class="d-flex flex-column align-items-center">
                                    <h3 class="mb-0    text-white">Моля гласувайте за</h3>
                                    <!--                                <i class="fa fa-hand-peace-o fa-3x"/>-->
                                    <h1 t-out="state.currentSession.name"
                                        class="mb-0 text-center text-uppercase fw-bold display-3 text-white opacity-75"/>
                                    <br/>
                                    <h1 class="text-white fw-bold">
                                        Да:
                                        <span class="f" t-out="state.currentSession.vote_yes"/>
                                        <br/>
                                        Не:
                                        <span t-out="state.currentSession.vote_no"/>
                                        <br/>
                                        Въздържал се:
                                        <span t-out="state.currentSession.vote_abstain"/>
                                        <br/>
                                        Общо гласували:
                                        <span t-out="state.currentSession.vote_total"/>
                                    </h1>
                                    <!--<h1 t-out="state.currentSession.name" class="fs-5 opacity-75"/>&ndash;&gt;-->
                                    <SessionRemainingTime
                                            currentSession="state.currentSession"
                                            onVotingEnd.bind="onVotingEnd"
                                    />
                                </div>
                            </t>
                            <t t-else="">
                                <div class="d-flex flex-column align-items-center">
                                    <h3 class="mb-0    text-white">Завърши гласуването за</h3>
                                    <!--                                <i class="fa fa-hand-peace-o fa-3x"/>-->
                                    <h1 t-out="state.currentSession.name"
                                        class="mb-0 text-center text-uppercase fw-bold display-3 text-white opacity-75"/>
                                    <br/>
                                    <h1 class="text-white fw-bold">
                                        Да:
                                        <span class="f" t-out="state.currentSession.vote_yes"/>
                                        <br/>
                                        Не:
                                        <span t-out="state.currentSession.vote_no"/>
                                        <br/>
                                        Въздържал се:
                                        <span t-out="state.currentSession.vote_abstain"/>
                                        <br/>
                                        Общо гласували:
                                        <span t-out="state.currentSession.vote_total"/>
                                    </h1>
                                    <!--<h1 t-out="state.currentSession.name" class="fs-5 opacity-75"/>&ndash;&gt;-->
                                    <SessionVoteResult
                                            currentSession="state.currentSession"
                                            onVoteResultEnd.bind="onVoteResultEnd"
                                    />
                                </div>
                            </t>
                        </t>
                        <div class="d-flex flex-column flex-xl-row gap-4">
                            <!--                            <button t-if="!state.currentSession and !state.scheduleBookingQuickCreate" class="btn btn-light btn-lg d-flex justify-content-between align-items-center gap-3 rounded-pill py-lg-3 px-3 px-lg-5" t-on-click="() => this.state.scheduleBookingQuickCreate = true">-->
                            <!--                                Book now-->
                            <!--                                <i class="fa fa-plus-circle"/>-->
                            <!--                            </button>-->
                            <!--                            <button class="btn btn-lg d-flex justify-content-between align-items-center gap-3 rounded-pill py-lg-3 px-3 px-lg-5" t-att-class="state.currentSession ? 'btn-light' : 'btn-dark'" t-on-click="() => this.state.scheduleBooking = true">-->
                            <!--                                Schedule Booking-->
                            <!--                                <i class="fa fa-clock-o"/>-->
                            <!--                            </button>-->
                        </div>
                    </div>
                    <!--                    <div class="o_display_bottom position-relative d-flex gap-3 w-100"-->
                    <!--                         t-if="state.scheduleBookingQuickCreate">-->
                    <!--                        <button class="btn btn-lg flex-grow-1 bg-dark bg-opacity-25 text-white"-->
                    <!--                                t-on-click="resetBookingForm">-->
                    <!--                            Cancel-->
                    <!--                        </button>-->
                    <!--                    </div>-->
                </div>
            </div>
            <div class="o_display_sidebar col-lg-4 col-xl-3 position-relative border-start bg-100">
                <t t-call="hr_rfid_vertical_elections.DisplaySidebar"/>
            </div>
        </div>
    </t>

    <t t-name="hr_rfid_vertical_elections.DisplaySidebar">
        <div class="position-lg-absolute top-0 start-0 end-0 bottom-0 d-flex flex-column justify-content-between h-100 p-3 overflow-auto">
            <!-- todo: check rtl -->
            <div class="my-2 border-bottom">
                <h4 t-out="props.name"/>
                <h6 t-out="props.company_name"/>
                <!--                <div class="mb-3 text-muted" t-if="props.description" t-out="displayDescription"/>-->

            </div>
            <div t-if="state.sessions.length === 0"
                 class="d-flex justify-content-center flex-column flex-fill py-3 text-center">
                <h5>Няма планирани гласувания</h5>
                <span class="text-muted">В момента няма планирани сесии за гласуване.</span>
            </div>
            <div t-else="" class="flex-fill pt-1">
                <!-- Today section is shown even if there are no bookings for this day -->
                <h6 class="mt-3 text-capitalize" t-out="state.currentDate.toRelativeCalendar()"/>
                <div class="list-group">
                    <t t-foreach="state.sessions" t-as="session" t-key="session.id">
                        <!--                        <t t-if="session.interval.start.startOf('day') > previous_date">-->
                        <!--                            <div t-if="booking_first" class="text-center text-muted">-->
                        <!--                                No Votes for Today-->
                        <!--                            </div>-->
                        <!--                            <h6 class="mt-4 mb-2" t-out="booking.interval.start.toLocaleString(dateFormat)"/>-->
                        <!--                            <t t-set="previous_date" t-value="booking.interval.start.startOf('day')"/>-->
                        <!--                        </t>-->

                        <!--                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-start cursor-pointer"-->
                        <!--                            t-att-class="state.currentSession?.id === session.id ? 'active' : ''">-->
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-start cursor-pointer"
                             t-att-class="[
                                    state.currentSession?.id === session.id ? 'active' : '',
                                    session.state === 'closed' || session.state === 'revoted' ? 'bg-success' : '',
                                    session.state === 'open' ? 'bg-warning' : '',
                                    session.state === 'draft' ? '' : ''
                                ].join(' ')">
                            <div class="text-break">
                                <div class="smaller text-bold" t-out="session.name"/>
                                <div class="smaller smooth-color-animate" t-if="session.state ==='open'">
                                    Тече гласуване ...
                                </div>
                                <div class="smaller" t-if="session.state ==='closed'">
                                    Резултат:
                                    <span t-out="session.final_vote" class="text-uppercase"/>
                                    <br/>
                                    Да:
                                    <span t-out="session.vote_yes"/>
                                    Не:
                                    <span t-out="session.vote_no"/>
                                    Въздържали се:
                                    <span t-out="session.vote_abstain"/>
                                    Общо гласували:
                                    <span t-out="session.vote_total"/>
                                </div>
                            </div>
                            <i class="fa fa-check-circle fa-2x text-white" t-if="session.state === 'closed'"/>
                            <i class="fa fa-hourglass-start fa-2x text-white " t-if="session.state === 'open'"/>
                            <i class="fa fa-pencil-square-o fa-2x text-muted" t-if="session.state === 'draft'"/>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
