<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="portal_my_home" name="Show RFID Service Information" customize_show="True"
                  inherit_id="portal.portal_my_home" priority="60">
           <div id="portal_service_category" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/rfid_service_portal/static/img/rfid_service.svg'"/>
                    <t t-set="title">RFID Services</t>
                    <t t-set="text">Review your RFID services</t>
                    <t t-set="url" t-value="'/my/rfid_service'"/>
                    <t t-set="placeholder_count" t-value="'service_count'"/>
                </t>
            </div>
        </template>

    </data>
</odoo>